<!DOCTYPE html>
<html>
	<%- include('global/head', {title: "Sign Up"}); %>
	<body>
		<%- include('global/header'); %>
		<div class="container">
            <div class="login-form">
                <form class="form-horizontal" action='/login' method="post">
                    <% if (error) { %>
                        <div class="form-group">
                            <div class="alert alert-danger col-sm-offset-4 col-sm-4" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> 
                            <%= error %>
                            <hr>
                            <% errormsgs.forEach(function(errormsg) { %>
                            <p><%= errormsg %></p>
                            <% }); %>
                            </div>
                        </div>
                    <% } %>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="username">Username:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="password">Password:</label>
                        <div class="col-sm-4">          
                            <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
                        </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-offset-4 col-sm-4">
                            <button type="submit" class="btn btn-default" style="width:200px">Submit</button>
                        </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-offset-4 col-sm-4">
                            <button id="show-signUp" class="btn btn-default" style="width:200px">Show SignUP</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="signup-form" style="display:none"  >
                <form class="form-horizontal" action='/signup' method="post">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="username">Username:</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="email">Email:</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="password">Password:</label>
                        <div class="col-sm-4">          
                            <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="club">Club:</label>
                        <div class="col-sm-4">          
                            <select id = "club" name = "club" class="form-control" required>
                                <option disabled = "disabled" selected = "selected" value=""> -- select an option -- </option>
                                <option value="Bayern Munich">Bayern</option>
                                <option value="Arsenal">Arsenal</option>
                                <option value="Real Madrid">Real Madrid</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-offset-4 col-sm-4">
                            <button type="submit" class="btn btn-default" style="width:200px" >Signup</button>
                        </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-offset-4 col-sm-4">
                            <button id="show-login" class="btn btn-default" style="width:200px" >Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
		<%- include('global/footer'); %>
    </body>
    <script type="text/javascript">
        $("#show-signUp").on("click",function(event){
           event.preventDefault();
           $(".login-form").hide();
           $(".signup-form").show();
        });
        $("#show-login").on("click",function(event){
            event.preventDefault();
           $(".signup-form").hide();
           $(".login-form").show();
        });
    </script>
</html>